{
  "name": "sirensforge-lora-trainer",
  "image": "runpod/pytorch:2.1.0-cuda11.8-cudnn8-runtime",
  "gpuType": "NVIDIA_TESLA_T4",
  "cloudType": "SECURE",
  "containerDiskInGb": 40,
  "volumeInGb": 50,
  "minVcpuCount": 4,
  "minMemoryInGb": 16,
  "ports": [],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "LORA_ID": "__INJECT_AT_RUNTIME__",
    "USER_ID": "__INJECT_AT_RUNTIME__",
    "SUPABASE_URL": "__INJECT_AT_RUNTIME__",
    "SUPABASE_SERVICE_ROLE_KEY": "__INJECT_AT_RUNTIME__",
    "OUTPUT_BUCKET": "lora-models"
  },
  "dockerCommand": [
    "bash",
    "-lc",
    "python /workspace/runpod/train_lora.py"
  ]
}
